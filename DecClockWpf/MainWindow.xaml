                    </TransformGroup>
                </Canvas.RenderTransform>
            </Canvas>
            <Canvas x:Name="canSecHand" Width="5" Background="Red" Margin="205,63,205,166" RenderTransformOrigin="0.5,0.77">
                <Canvas.Effect>
                    <DropShadowEffect/>
                </Canvas.Effect>
                <Canvas.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="11.444"/>
